<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Appliances">

    <TextView
        android:id="@+id/Appliances"
        android:layout_width="393dp"
        android:layout_height="59dp"
        android:text="         Appliances"
        android:background="@color/teal_200"
        android:textStyle="bold"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

    <Button
        android:id="@+id/toSwagatAppliances"
        android:layout_width="412dp"
        android:layout_height="128dp"
        android:text="1.   Swagat Appliances"
        android:backgroundTint="@color/teal_200"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Appliances"
        app:layout_constraintVertical_bias="0.227" />

    <Button
        android:id="@+id/toSammyArlingtonAppliance"
        android:layout_width="397dp"
        android:layout_height="112dp"
        android:text="2.   Sammy Arlington Appliances"
        android:backgroundTint="@color/teal_700"
        android:textColor="@color/purple_200"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toSwagatAppliances"
        app:layout_constraintVertical_bias="0.212" />
</androidx.constraintlayout.widget.ConstraintLayout>